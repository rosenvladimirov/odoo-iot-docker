# ============================================
# ODOO IOT BOX - ENVIRONMENT CONFIGURATION
# ============================================

# === IDENTITY ===
IOT_IDENTIFIER=
# Auto-generate if empty

# === TIMEZONE ===
TIMEZONE=Europe/Sofia

# === DOMAIN ===
IOT_DOMAIN=iot-box.local
# Used for certificates and routing

# === STEP-CA CERTIFICATE AUTHORITY ===
STEP_CA_ENABLED=true
STEP_CA_NAME="IoT Box CA"
STEP_CA_PROVISIONER=admin
STEP_CA_PASSWORD=changeme-secure-password-here
STEP_CA_PORT=9000
STEP_CA_URL=https://step-ca:9000
STEP_CA_PATH=./docker/step-ca/local-pki
STEP_CA_CERTS_PATH=./docker/step-ca/local-pki/certs
STEP_CA_MEMORY_LIMIT=256M
RENEWAL_CHECK_INTERVAL=86400

# === TRAEFIK SETTINGS ===
TRAEFIK_DASHBOARD_ENABLED=true
TRAEFIK_DASHBOARD_PORT=8080
TRAEFIK_DASHBOARD_USER=admin
TRAEFIK_DASHBOARD_PASSWORD=changeme
TRAEFIK_MEMORY_LIMIT=128M

# === CORS SETTINGS ===
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=*
CORS_EXPOSED_HEADERS=*
CORS_MAX_AGE=86400
CORS_ALLOW_CREDENTIALS=true

# === PORTS ===
HTTP_PORT=80
HTTPS_PORT=443

# === ODOO SETTINGS ===
ODOO_LOG_LEVEL=info

# === WIFI ===
WIFI_SERVICE_ENABLED=false

# === STORAGE ===
CONFIG_PATH=./docker/config
LOGS_PATH=./logs
DATA_PATH=./data

# === RESOURCES ===
IOT_BOX_MEMORY_LIMIT=512M

# === DEVELOPMENT ===
DEV_MODE=false

# === CUPS SETTINGS ===
CUPS_ADMIN=admin
CUPS_PASSWORD=changeme